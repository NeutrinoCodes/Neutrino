## @file   Doxyfile.in
## @author Erik ZORZIN
## @date   25OCT2019
## @brief  This is the main configuration file for Doxygen. Invoked by "make doc" in CMakeLists.txt.

## Setting project name...
PROJECT_NAME            = "NEUTRINO"

# Setting project caption description...
PROJECT_BRIEF           = "A fast and light library for GPU-based computation."

# Setting project logo...
PROJECT_LOGO            = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/Doxygen/Logos/neutrino_logo_enso.png

# Setting Doxygen documentation output directory...
OUTPUT_DIRECTORY        = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/Doxygen

# Setting valid file types to be considered in Doxygen...
FILE_PATTERNS           = *.cpp *.hpp *.cl *.frag *.vert *.geom *.tess *.md *.in

# Setting code mapping grammatics for GLSL and OpenCL languages...
EXTENSION_MAPPING       = frag=C++ vert=C++ geom=C++ tess=C++ cl=C++ in=Python

# Setting Doxygen input directories...
INPUT                   = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/src/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/include/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/kernel/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/shader/ \
# Others doc files: e.g.  @CMAKE_CURRENT_SOURCE_DIR@/../Docs/some_documentation.md
# 1. Remember to put "\" before adding a file in this list.
# 2. Latex code in mardown files in Doxygen is accepted between "\f...latex...\f".

# Enabling search on input subdirectories...
RECURSIVE               = YES

# Disabling LATEX documentation generation...
GENERATE_LATEX          = NO

# Enabling HTML documentation generation...
GENERATE_HTML           = YES
HTML_HEADER             = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/header.html
HTML_FOOTER             = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/footer.html
HTML_EXTRA_STYLESHEET   = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/customdoxygen.css
HTML_COLORSTYLE_HUE     = 240
HTML_COLORSTYLE_SAT     = 255

# Enabling Markdown syntax in Doxygen comments...
MARKDOWN_SUPPORT        = YES

# Enabling html left-side tree file navigation tree...
GENERATE_TREEVIEW       = NO

# Enabling the body of functions, classes and enums directly into the documentation...
INLINE_SOURCES          = YES

# Disabling alphabetical order of members in documentation...
# Members will appear in declaration order as like as they appear in the source code.
SORT_MEMBER_DOCS        = NO

# Enabling documentation of desired entities...
EXTRACT_ALL             = NO
EXTRACT_PRIVATE         = YES
EXTRACT_STATIC          = YES
EXTRACT_LOCAL_CLASSES   = YES
EXTRACT_LOCAL_METHODS   = YES
ALWAYS_DETAILED_SEC     = NO
BRIEF_MEMBER_DESC       = YES
REPEAT_BRIEF            = YES
SOURCE_BROWSER          = YES
VERBATIM_HEADERS        = YES
STRIP_CODE_COMMENTS     = NO
ENABLE_PREPROCESSING    = YES

# Excluding full path file names during include-diagram generation...
FULL_PATH_NAMES         = YES
STRIP_FROM_PATH         = ../..

# Enabling GraphViz support...
HAVE_DOT                = YES

# Enabling Call-graphs...
CALL_GRAPH              = YES

# Disabling Include-graphs...
INCLUDE_GRAPH           = NO

# Setting main page...
USE_MDFILE_AS_MAINPAGE  = main_page.md

# Setting MathJax path (relative to the Doxygen output directory)...
MATHJAX_RELPATH         = ../../MathJax

# Enabling MathJax rendering...
USE_MATHJAX             = YES
