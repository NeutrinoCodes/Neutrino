PROJECT_NAME            = "NEUTRINO"
PROJECT_BRIEF           = "Fast and light solid OpenCL/GL coding."
OUTPUT_DIRECTORY        = @CMAKE_CURRENT_SOURCE_DIR@/../Docs/Doxygen
INPUT                   = @CMAKE_CURRENT_SOURCE_DIR@/src/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/include/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/kernel/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/shader/ \
                          @CMAKE_CURRENT_SOURCE_DIR@/../Docs/opencl.md \
                          @CMAKE_CURRENT_SOURCE_DIR@/../Docs/opengl.md \
                          @CMAKE_CURRENT_SOURCE_DIR@/../Docs/theory.md

FILE_PATTERNS           = *.cpp *.hpp *.cl *.frag *.vert
MARKDOWN_SUPPORT        = YES
GENERATE_TREEVIEW       = YES
INLINE_SOURCES          = YES
SORT_MEMBER_DOCS        = NO
HAVE_DOT                = YES
EXTRACT_ALL             = YES
EXTRACT_PRIVATE         = YES
EXTRACT_STATIC          = YES
CALL_GRAPH              = YES
INCLUDE_GRAPH           = NO
GENERATE_LATEX          = YES
USE_PDFLATEX            = YES
PDF_HYPERLINKS          = YES
